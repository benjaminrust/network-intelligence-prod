{
  "name": "Network Intelligence - Production",
  "description": "Real-time network intelligence and security monitoring platform - Production Environment",
  "repository": "https://github.com/benjaminrust/network-intelligence-prod",
  "logo": "https://node-js-sample.herokuapp.com/node.png",
  "keywords": ["python", "flask", "network-intelligence", "security", "monitoring"],
  "env": {
    "FLASK_ENV": {
      "description": "Flask environment",
      "value": "production",
      "required": true
    },
    "SECRET_KEY": {
      "description": "Flask secret key",
      "generator": "secret",
      "required": true
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:mini",
      "as": "DATABASE"
    },
    {
      "plan": "heroku-redis:mini",
      "as": "REDIS"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "scripts": {
    "postdeploy": "python -c \"print('Production app deployed successfully!')\""
  },
  "environments": {
    "test": {
      "scripts": {
        "test": "python -m pytest tests/",
        "test-setup": "python setup_db.py"
      },
      "env": {
        "FLASK_ENV": "testing",
        "TESTING": "true"
      }
    }
  }
} 